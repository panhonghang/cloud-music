<view style="
grid-template-columns: repeat(3,33.3%);
grid-template-rows: repeat({{lists.length/3}},300rpx);
" class="grid-box">
  <view a:for="{{lists}}">
    <view class="card">
      <text class="playCount">{{item.playCount}}</text>
      <image mode="aspectFit" src="{{item.picUrl}}"/>
      <text class="palyname">{{item.name}}</text>
    </view>
  </view>
</view>